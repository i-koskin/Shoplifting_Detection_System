# =============================================
# TEST ENVIRONMENT
# =============================================

# Environment
MONITORING_ENV=test

# AI Models
YOLO_MODEL_PATH=yolo11s-pose.pt

# Detection Settings
CUDA_AVAILABLE=true
DETECTION_CONFIDENCE=0.3
TEST_MIN_CONFIDENCE=0.3

# Alert Configuration
ALERT_COOLDOWN=5
MAX_ALERTS_PER_MINUTE=10
TEST_ALERT_THRESHOLD=2

# State transition settings
NORMAL_STATE_THRESHOLD=10
MIN_NORMAL_DURATION=1.0

# Suspicious behavior validation settings
SUSPICIOUS_CONSECUTIVE_THRESHOLD=10
SUSPICIOUS_CONFIDENCE_THRESHOLD=0.3
MIN_SUSPICIOUS_DURATION=10

# System Behavior
TEST_SEND_ALERTS=false
TEST_SHOW_DISPLAY=true
TEST_LOG_DETAILED_PREDICTIONS=true
TEST_FRAME_SKIP=1
SAVE_EVIDENCE=true

# API Configuration
# API_BASE_URL=http://localhost:8000
# API_KEY=api_key
# API_ENDPOINT_TEMPLATE=/events/{camera_name}/{label}/create

# Logging
TEST_LOG_LEVEL=DEBUG

# Performance
FRAME_BUFFER_SIZE=450
MIN_VIDEO_DURATION=5
TARGET_VIDEO_DURATION=15
OUTPUT_FPS=30.0
VIDEO_CODEC=mp4v

# State transition settings
NORMAL_STATE_THRESHOLD=8

# Display Configuration (for GUI)
DISPLAY=:0
QT_X11_NO_MITSHM=1
DISPLAY_WIDTH=1020
DISPLAY_HEIGHT=600
WINDOW_NAME=Shoplifting Detection - Test