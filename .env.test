# =============================================
# TEST ENVIRONMENT
# =============================================

# Environment
MONITORING_ENV=test

# AI Models
YOLO_MODEL_PATH=yolo11s-pose.pt

# Detection Settings
CUDA_AVAILABLE=true
DETECTION_CONFIDENCE=0.7
TEST_MIN_CONFIDENCE=0.7

# Alert Configuration
ALERT_COOLDOWN=5
MAX_ALERTS_PER_MINUTE=10
TEST_ALERT_THRESHOLD=2

# System Behavior
TEST_SEND_ALERTS=true
TEST_SHOW_DISPLAY=true
TEST_LOG_DETAILED_PREDICTIONS=true
TEST_FRAME_SKIP=1
SAVE_EVIDENCE=true

# API Configuration
API_BASE_URL=http://localhost:8000
API_KEY=your_production_api_key_here
API_ENDPOINT_TEMPLATE=/events/{camera_name}/{label}/create

# Logging
TEST_LOG_LEVEL=DEBUG

# Performance
FRAME_BUFFER_SIZE=450
OUTPUT_FPS=30.0
VIDEO_CODEC=mp4v

# State transition settings
NORMAL_STATE_THRESHOLD=3

# Display Configuration (for GUI)
DISPLAY=:0
QT_X11_NO_MITSHM=1
DISPLAY_WIDTH=1020
DISPLAY_HEIGHT=600
WINDOW_NAME=Shoplifting Detection - Test
