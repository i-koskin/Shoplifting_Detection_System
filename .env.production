# =============================================
# PRODUCTION ENVIRONMENT
# =============================================

# Environment
MONITORING_ENV=production

# AI Models
YOLO_MODEL_PATH=yolo11s-pose.pt

# Detection Settings
CUDA_AVAILABLE=true
DETECTION_CONFIDENCE=0.7
PRODUCTION_MIN_CONFIDENCE=0.7

# Alert Configuration
ALERT_COOLDOWN=10
MAX_ALERTS_PER_MINUTE=5
PRODUCTION_ALERT_THRESHOLD=15

# System Behavior
PRODUCTION_SEND_ALERTS=true
PRODUCTION_SHOW_DISPLAY=false
PRODUCTION_LOG_DETAILED_PREDICTIONS=false
PRODUCTION_FRAME_SKIP=2
SAVE_EVIDENCE=false

# API Configuration
API_BASE_URL=http://localhost:8000
API_KEY=
API_ENDPOINT_TEMPLATE=/events/{camera_name}/{label}/create
 
# Logging
PRODUCTION_LOG_LEVEL=INFO

# Performance
FRAME_BUFFER_SIZE=450
OUTPUT_FPS=30.0
VIDEO_CODEC=mp4v

# State transition settings
NORMAL_STATE_THRESHOLD=8

# Display Configuration (for GUI)
DISPLAY=:0
QT_X11_NO_MITSHM=1
DISPLAY_WIDTH=1020
DISPLAY_HEIGHT=600
WINDOW_NAME=Shoplifting Detection - Production